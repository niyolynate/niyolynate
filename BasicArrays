// Implicity and explicitly to refer to members of an object.

public class Bookwatch
{
public static void main(String[]args)
{
SimpleTime time = new SimpleTime(15, 30, 19);
System.out.println(time.builString() );
}// end main
}//end class Bookwatch
//class SimpleTime demostrates the "this" reference
class SimpleTime
{
private int hour;//0-23
private int minutes;//0-59
private int second;//0-59

public SimpleTime (int hour, int minutes, int second)
{
this.hour = hour//set "this" object's hour
this.minutes = minute;///set this object's second
}//end SimpleTime constructors

//use explicit and implicit "this" to call toUniversalString
public String builString()
return String.format("24s:%sn%24s:%s",
"this.touniversalString()". this.toUniveralString();
toUniversalString()", to UniversalString());
}//end method buildString

//convert to String in Unu=iversal - time formart(HH:MM:SS)
public String toUniversaiString()
return String.formt("&0.2d:"%0.2d:%0.0d:");
}//end methos toUniversalString
}//end class SimpleTime

